<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <sitemap>
    <loc><%= @site_url %>/sitemap_general.xml</loc>
    <lastmod><%= @lastmod %></lastmod>
  </sitemap>
<% @gems_count.times.each_slice(40000).each_with_index{|_, i| %>
  <sitemap>
    <loc><%= @site_url %>/sitemaps/gems<%= i %>.xml</loc>
    <lastmod><%= @lastmod %></lastmod>
  </sitemap>
<% } %>
</sitemapindex>
